CRGB leds[NUM_LEDS];
void setup() {  
  FastLED.addLeds<NEOPIXEL, 7>(leds, NUM_LEDS);
}


int cord_to_led(int x, int y) {
  // Why does this work? idk it just does
  int led_idx = x;
  if (y % 2 != 0) {
    led_idx = 9 - x;
  }
  led_idx += y * 15;
  return led_idx;
}


long color(int num) {
  switch (num) {
    case 1: return 0xFFFFFF;
    case 2: return 0xFF0000;
    case 3: return 0x00FF00;
    case 4: return 0x0000FF;
    case 5: return 0xFFEF00;
    case 6: return 0x009888;
    case 7: return 0xFF5500;
    case 8: return 0x50342C;
    case 9: return 0x682CBF;
    case 10: return 0x9E9E9E;
    default: return 0x000000;
  }
}


void loop() {
  for (int frame_n = 0; frame_n < FRAMES; frame_n++) {
    for (int i = 0; i < NUM_LEDS; i++) {
      int y = (int)i / 10;
      int x = i % 10;

      int led_idx = cord_to_led(x, y);
      leds[led_idx] = color(animation[frame_n][y][x]);
    }
    FastLED.show();
  
    delay(DELAY);
  }
}
